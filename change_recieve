-- LocalScript in StarterPlayerScripts
print("OKAY")
local TreeTable = {
"Golden Goose",
}

local Players     = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local player = Players.LocalPlayer
local filename = player.Name .. '.txt'

local function unequipCurrentTool()
    local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    local hum = char:FindFirstChildOfClass("Humanoid")
    if hum then
        hum:UnequipTools()  -- moves equipped tool back to Backpack
    end
end

repeat task.wait() until LocalPlayer and LocalPlayer:FindFirstChild("Backpack")

while true do
    local matchCount = 0
    for _, tool in ipairs(LocalPlayer.Backpack:GetChildren()) do
        unequipCurrentTool()
        for _, treeName in ipairs(TreeTable) do
            if tool.Name:find(treeName) then
                matchCount = matchCount + 1
                break    -- stop checking this tool once matched
            end
        end
    end

    if matchCount < 1 then
		writefile(filename, 'Yummytool')
        wait(60)
        player:Kick('du pet r be iu di ra th')
	end

    task.wait(1)
end
